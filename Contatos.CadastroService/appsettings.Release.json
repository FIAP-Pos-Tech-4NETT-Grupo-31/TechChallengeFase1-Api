{
  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "Password": "Grupo#31"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Grafana.Loki",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://loki:3100",
          "labels": [
            {
              "key": "Microservice",
              "value": "Contatos.CadastroService"
            }
          ],
          "propertiesAsLabels": [
            "Microservice"
          ]
        }
      } //,
